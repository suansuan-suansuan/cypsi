<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cy.psi.dao.BaseUnitDao">

    <resultMap type="com.cy.psi.entity.BaseUnit" id="BaseUnitMap">
        <result property="unitId" column="unit_id" jdbcType="INTEGER"/>
        <result property="unitName" column="unit_name" jdbcType="VARCHAR"/>
    </resultMap>

    <sql id="BaseUnitCol">
        unit_id, unit_name    </sql>

    <!--查询单个-->
    <select id="queryById" resultMap="BaseUnitMap">
        select
        <include refid="BaseUnitCol"></include>
        from cypsi.base_unit
        where unit_id = #{unitId}
    </select>

    <!--查询所有-->
    <select id="queryAll" resultMap="BaseUnitMap">
        select
        <include refid="BaseUnitCol"></include>
        from cypsi.base_unit
    </select>

    <!--通过实体作为或者条件查询-->
    <select id="queryOrByPojo" resultMap="BaseUnitMap">
        select
        <include refid="BaseUnitCol"></include>
        from cypsi.base_unit
        <where>
            <if test="unitId != null">
                or unit_id like CONCAT('%',#{unitId},'%')
            </if>
            <if test="unitName != null and unitName != ''">
                or unit_name like CONCAT('%',#{unitName},'%')
            </if>
        </where>
    </select>

    <!--通过实体作为并且条件查询-->
    <select id="queryAndByPojo" resultMap="BaseUnitMap">
        select
        <include refid="BaseUnitCol"></include>
        from cypsi.base_unit
        <where>
            <if test="unitId != null">
                and unit_id = #{unitId}
            </if>
            <if test="unitName != null and unitName != ''">
                and unit_name = #{unitName}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert">
        insert into cypsi.base_unit
        <trim prefix="(" suffix=")" suffixOverrides=",">

            <if test="unitName != null">
                unit_name,
            </if>
        </trim>
        values
        <trim prefix="(" suffix=")" suffixOverrides=",">

            <if test="unitName != null">
                #{unitName},
            </if>
        </trim>

    </insert>

    <!--批量新增数据 -->
    <insert id="insertBatch">
        <foreach collection="list" item="entity" open="begin" separator=";" close=";end;">
            insert into cypsi.base_unit
            <trim prefix="(" suffix=")" suffixOverrides=",">

                <if test="entity.unitName != null">
                    unit_name,
                </if>
            </trim>
            values
            <trim prefix="(" suffix=")" suffixOverrides=",">

                <if test="entity.unitName != null">
                    #{entity.unitName},
                </if>
            </trim>
        </foreach>
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update cypsi.base_unit
        <set>
            <if test="unitName != null">
                unit_name = #{unitName},
            </if>
        </set>
        where unit_id = #{unitId}
    </update>

    <!--批量修改数据-->
    <update id="updateBatch">
        <foreach collection="list" item="entity" open="begin" separator=";" close=";end;">
            update cypsi.base_unit
            <set>
                <if test="entity.unitName != null">
                    unit_name = #{entity.unitName},
                </if>
            </set>
            where unit_id = #{entity.unitId}
        </foreach>
    </update>

    <!--通过主键删除数据-->
    <delete id="deleteById">
        delete from cypsi.base_unit where unit_id = #{unitId}
    </delete>

    <!--通过主键列表批量删除数据-->
    <delete id="deleteBatch">
        delete from cypsi.base_unit where unit_id in
        <foreach collection="list" item="id" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

    <!--通过实体列表批量删除数据-->
    <delete id="deleteBatchByEntities">
        delete from cypsi.base_unit where unit_id in
        <foreach collection="list" item="entity" open="(" separator="," close=")">
            #{entity.unitId}
        </foreach>
    </delete>
</mapper>

