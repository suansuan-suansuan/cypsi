<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cy.psi.dao.CheckwarehouseDao">

    <resultMap type="com.cy.psi.entity.Checkwarehouse" id="CheckwarehouseMap">
        <id property="checkid" column="checkid" jdbcType="INTEGER"/>
        <result property="serialNumber" column="serial_number" jdbcType="VARCHAR"/>
        <result property="documentationDate" column="documentation_date" jdbcType="TIMESTAMP"/>
        <result property="documentmaker" column="documentMaker" jdbcType="VARCHAR"/>
        <result property="operator" column="operator" jdbcType="VARCHAR"/>
        <result property="auditor" column="auditor" jdbcType="VARCHAR"/>
        <result property="audiData" column="audi_data" jdbcType="TIMESTAMP"/>
        <result property="typeOfDocument" column="type_of_document" jdbcType="VARCHAR"/>
        <result property="explains" column="explains" jdbcType="VARCHAR"/>
        <result property="timeliness" column="TimeLiness" jdbcType="INTEGER"/>
        <result property="productId" column="product_id" jdbcType="INTEGER"/>
    </resultMap>

    <!--查询盘点表 -->
    <select id="selectCheckwarehouse" resultMap="CheckwarehouseMap">
     select * from cypsi.Checkwarehouse
      where TimeLiness=0
      order by checkid
    </select>

    <!--逻辑删除 -->
    <update id="DelCheckwarehouse" parameterType="com.cy.psi.entity.Checkwarehouse">
        update cypsi.Checkwarehouse set TimeLiness=#{timeLiness} where checkid=#{checkid}
     </update>


</mapper>

